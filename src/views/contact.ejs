<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title%></title>
    <%- include('partials/head.ejs')%>
</head>
<body>

    <%- include('partials/navigation.ejs')%>

    <div class="container d-flex justify-content-center align-items-center">
        <div class="card">
            <div class="card-header">
                <h3>Contact me</h3>
            </div>
            <div class="card-body">
                <form action="/send-email" method="POST">
                    <div class="mb-3">
                        <label for="name">Name</label>
                        <input type="text" name="name" placeholder="Name" class="form-control" autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="email">Email</label>
                        <input type="text" name="email" placeholder="Email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="phone">Phone</label>
                        <input type="text" name="phone" placeholder="Phone" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="message">Message</label>
                        <textarea name="message" rows="3" class="form-control" placeholder="Write a Message"></textarea>
                    </div>
                    <div class="g-recaptcha" name="g-recaptcha-response" data-sitekey="<%= process.env.RECAPTCHA_SITE_KEY %>"></div>
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs')%>

    <script>
        // Función para obtener parámetros de la URL
        function getUrlParameter(name) {
            name = name.replace(/[\[]/, '\\[').replace(/[\]]/, '\\]');
            var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
            var results = regex.exec(location.search);
            return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
        };
    
        // Obtener el parámetro 'success' de la URL
        var successParam = getUrlParameter('success');
    
        // Mostrar mensaje de éxito si 'success' es 'true'
        if (successParam === 'true') {
            alert('El correo se ha enviado exitosamente.');
        }
    
        // Obtener el parámetro 'error' de la URL
        var errorParam = getUrlParameter('error');
    
        // Mostrar mensaje de error si 'error' no está vacío
        if (errorParam !== '') {
            // Personalizar el mensaje de alerta con el contenido del parámetro 'error'
            alert('Error: ' + errorParam);
        }
    </script>
    
</body>
</html>
